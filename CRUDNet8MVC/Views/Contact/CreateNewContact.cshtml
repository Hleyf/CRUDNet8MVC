@model CRUDNet8MVC.Models.Contact

@{
    ViewData["Title"] = "Create New Contact";
}

<h1 class="text-center">@ViewData["Title"]</h1>
<div class="row">
    <div class="offset-9 col-3 mb-3">
        <a asp-action="CreateNewContact" asp-controller="Contact" class="btn btn-secondary d-block mx-auto btn-lg">New User</a>
    </div>
</div>
<div class="row">
    <div class="offset-12">
        <div class="card border">
            <div class="card-header bg-dark">
                <h3 class="text-white"><strong>New Contact</strong></h3>
            </div>
            <div class="card-body">
                <form asp-action="CreateNewContact" method="POST">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div> <!-- This is the validation summary -->
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span> <!-- This is the validation message -->
                    </div>
                    <div class="form-group">
                        <label asp-for="Phone" class="control-label"></label>
                        <input asp-for="Phone" class="form-control" />
                        <span asp-validation-for="Phone" class="text-danger"></span> <!-- This is the validation message -->
                    </div>
                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span> <!-- This is the validation message -->
                    </div>
                    <div class="form-group mt-3">
                        <button type="submit" value="Create" class="btn btn-primary d-block mx-auto">Submit</button>
                    </div>
                </form>
                <a asp-controller="Contacts" asp-action="Index">Back</a>
            </div>
        </div>
    </div>
</div>